<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
    <TableView fx:id="taskTable" prefWidth="400" prefHeight="300">
        <columns>
            <TableColumn text="Task Name">
                <cellValueFactory>
                    <PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Description">
                <cellValueFactory>
                    <PropertyValueFactory property="description" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Status">
                <cellValueFactory>
                    <PropertyValueFactory property="status" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Button id="addTaskButton" text="Add Task"/>
    <Button id="editTaskButton" text="Edit Task"/>
    <Button id="deleteTaskButton" text="Delete Task"/>
    <ComboBox fx:id="filterComboBox" promptText="Filter by Status">

    </ComboBox>
</VBox>
